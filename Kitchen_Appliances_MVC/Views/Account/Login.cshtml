@using Kitchen_Appliances_MVC.ViewModels.Account
@model LoginAuthRequest
@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <style>
        .container {
            margin-top: 80px;
        }

      /*   .panel-body {
            padding-top: 60px;
        } */

        .form-group {
            padding: 0px 30px;
        }

            .form-group input {
                padding: 20px 10px;
            }

        .panel-login {

            border-color: #ccc;
            -webkit-box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.2);
            -moz-box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.2);
            box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.2);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(85,85,176,1) 35%, rgba(0,212,255,1) 100%);
        }

            .panel-login > .panel-heading {
                color: #00415d;
                background-color: #fff;
                border-color: #fff;
                text-align: center;
            }

            .panel-login > .panel-heading {
                height: 10px;
            }

                .panel-login > .panel-heading a {
                    text-decoration: none;
                    color: #666;
                    font-weight: bold;
                    font-size: 35px;
                    -webkit-transition: all 0.1s linear;
                    -moz-transition: all 0.1s linear;
                    transition: all 0.1s linear;
                }

            .panel-login input:hover,
            .panel-login input:focus {
                outline: none;
                -webkit-box-shadow: none;
                -moz-box-shadow: none;
                box-shadow: none;
                border-color: #ccc;
            }

        .btn-login {
            background-color: #59B2E0;
            outline: none;
            color: #fff;
            font-size: 12px;
            height: auto;
            font-weight: normal;
            padding: 10px 0;
            text-transform: uppercase;
            border-color: #59B2E6;
        }

            .btn-login:hover,
            .btn-login:focus {
                color: #fff;
                background-color: #53A3CD;
                border-color: #53A3CD;
            }

        .forgot-password {
            text-decoration: underline;
            color: #888;
        }

            .forgot-password:hover,
            .forgot-password:focus {
                text-decoration: underline;
                color: #666;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12">
                                <a href="#" class="active" id="login-form-link" style="color:white;">ĐĂNG NHẬP</a>
                            </div>
                            @* <div class="col-xs-6">
                            <a href="#" id="register-form-link">Register</a>
                            </div> *@
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">

                                <form id="login-form" method="post" asp-action="Login" asp-controller="Account" style="display: block;">
                                    <span class='text-danger'></span>

                                    <div class="form-group">
                                        <input type="text" name="Email" id="Email" asp-for="Email" class="form-control" placeholder="Email" value="">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="Password" id="Password" asp-for="Password" class="form-control" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <p class="text-danger">@ViewBag.error</p>
                                    <div class="form-group text-center">
                                        <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                        <label for="remember"> Remember Me</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="login-submit" id="login-submit" class="form-control btn btn-login" value="Log In">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="text-center">
                                                    Chưa có tài khoản
                                                    <a href="@Url.Action("Register", "Account")" class="forgot-password">Đăng kí</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>